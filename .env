# ---------- Ports ----------
API_PORT=8080
POSTGRES_PORT=5432
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ---------- Postgres ----------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hrms
DB_URL=postgres://postgres:postgres@db:5432/hrms?sslmode=disable

# ---------- Redis ----------
REDIS_ADDR=redis:6379

# ---------- MinIO Root (Console/Admin) ----------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# ---------- S3/MinIO usados pelo APP ----------
S3_BUCKET=hrms-bucket
S3_REGION=us-east-1
S3_ENDPOINT=http://minio:9000

# Se quiser que a API retorne links “clicáveis” do MinIO para o host:
# Para path-style via MinIO local: http://localhost:9000/hrms-bucket
# Deixe vazio para retornar s3://hrms-bucket/key e baixar via /documents/{id}/download
S3_BASE_URL=http://localhost:9000/hrms-bucket

# Para MinIO (path-style) precisa ser true
S3_FORCE_PATH=true

# "private" por padrão; use "public-read" se o bucket estiver com policy pública
S3_ACL=private

# ---------- Credenciais S3 (usadas pelo AWS SDK v2 no app) ----------
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
